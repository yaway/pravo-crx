.layer-booth
  overflow hidden
  .btn
    display none
  &.has-artworks
    .btn
      display inline-block
  &.is-favorite
    .btn-favorite
      &.is-dark
        // color $blue
        // bg(alpha(#fff,0.3))
  .artwork
    display none
    position absolute
    top -50%
    left -50%
    width 200%
    height 200%
    .img
      min-height 50%
      max-width 100%
      margin auto
      absolute-cover()
    &.is-current
      display block

  .layer-artworks
    layer(1)

  .layer-btns
    layer(2)
    flex-direction(column)
    align-items(center)
    justify-content(flex-end)
    margin-bottom 10px
    


      
