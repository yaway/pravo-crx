.layer-booth
  overflow hidden

  .layer-artworks
    layer(1)
  
  .artwork
    display none
    position absolute
    top -50%
    left -50%
    width 200%
    height 200%
    .img
      min-height 50%
      max-width 100%
      margin auto
      absolute-cover()
    &.is-current
      display block

  .layer-btns
    layer(2)
    flex-direction(column)
    align-items(center)
    justify-content(flex-end)
    margin-bottom 10px

  &.has-artworks
    .m-fa-btn
      pointer-events auto
      transition(all,0.2s)
      opacity(1)
      transform(scale(1))
      .m-ico
        transition(all,0.2s,0.1s)
        opacity(1)
  &,
  &.blur
    .m-fa-btn
      pointer-events none
      transition(all,0.2s)
      opacity(0)
      transform(scale(0.6))
      .m-ico
        opacity(0)
    


      
