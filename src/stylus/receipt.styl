.layer-receipt
  .m-fa-btn
    transition(all,0.2s,ease-in-out)
    absolute(bottom 8px right 20px)
    .m-ico
      opacity(0)
  
  .m-i-btn
    absolute(top 8px right 8px)
    
  .drawer
    display(flex)
    flex(1)
    absolute-bottom()
    height 186px
    overflow hidden
    
  .panel
    opacity(0)
    transition(all,0.1s)
    absolute-cover()
    overflow hidden
    
  .scroll
    transform(translateX(8px))
    absolute-bottom()
    left 8px
    right 8px
    bottom 8px
    height 120px
    overflow hidden

  .toolbar
    display(flex)
    absolute-top()
    height 56px
    color #fff
    cursor pointer
    .title
      position relative
      height 56px
      line-height 56px
      padding-right 34px
      padding-left 8px
      .m-ico
        absolute(top 16px right 8px)
    .space
      flex(1)
  
  .feed-list
    display none
    absolute(top 8px left 8px)
    bg(alpha(#000,0.9))
    color #fff
    padding: 8px 0
    .feed
      pointer()
      height 48px
      line-height 48px
      padding 0 16px
      // &.is-chosen
      
  &.is-unfolded
    .m-fa-btn
      transform(translateX(-720px) scale(60))
      bg(alpha(#000,0.6))
      .m-ico
        transition(all,0s)
        opacity(0)
    
    .panel
      transition(all,0.6s)
      opacity(1)
      .scroll
        transition(all,0.4s,0.1s)
        transform(translateX(0))
        
    .artwork-list
      height 100%
      display(flex)
      min-width fit-content

    .artwork-thumbnail
      user-select(none)
      position relative
      display inline-block
      height 100%
      .img
        user-drag(none)
        display block
        height 100%
      &.is-chosen
        &:before
          absolute-cover()
          content: ''
          bg(alpha(#fff,0.3))
          
    .artwork-thumbnail + .artwork-thumbnail
      margin-left 8px

  &.is-morphed
    .drawer
      height 0
      overflow visible
    .m-fa-btn
      .m-ico
        transition(all,0.2s)
        opacity(1)

  &.is-feed-list-unfolded
    .feed-list
      display block
      

.scroll
  &.is-eased
    .scrollee
      transition(all,0.6s,ease-out)      
  .scrollee
    transition(all,0.1s,ease-in)
