.layer-receipt
  &.is-unfolded
    .drawer
      height 120px
      overflow hidden
        
    .m-fa-btn
      transition(all,0.6s)
      transform(translateX(-600px),scale(60))
      bg(alpha(#000,0.6))
      .m-ico
        display none
    
    .panel
      transition(all,0.6s)
      opacity(1)
      .scroll
        transition(all,0.4s,0.1s)
        transform(translateX(0))
        
    .artwork-list
      height 100%
      display(flex)
      min-width fit-content

    .artwork-thumbnail
      user-select(none)
      position relative
      display inline-block
      height 100%
      .img
        user-drag(none)
        display block
        height 100%
      &.is-chosen
        &:before
          absolute-cover()
          content: ''
          bg(alpha(#fff,0.3))
          
    .artwork-thumbnail + .artwork-thumbnail
      margin-left 10px


  &.is-feed-list-unfolded
    .feed-list
      display block

    
  .drawer
    display(flex)
    flex(1)
    absolute-bottom()
    height 0
    
  .panel
    opacity(0)
    absolute-cover()
    overflow hidden
    height 100%
    .scroll
      transform(translateX(10px))
      absolute-cover()
      height 100%
      overflow hidden
    
    
  .m-fa-btn
    absolute(bottom 10px right 20px)
    
  .m-i-btn
    absolute(top 10px right 20px)
  
  .feed-list
    display none
    bt = (10 + 20 + 20)px
    absolute(bottom 10px right 230px)
    bg(transparent)
    border 2px solid #fff
    color #fff
    .feed
      padding 5px 10px
      cursor pointer
      &.is-chosen
        bg(alpha(#fff,0.3))
    .feed + .feed
      border-top 1px solid #fff
      

.scroll
  &.is-eased
    .scrollee
      transition(all,0.8s,ease-out)      
  .scrollee
    transition(all,0.1s,ease-in)
