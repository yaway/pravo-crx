.layer-booth
  overflow hidden
  .btn
    display none
  &.with-artworks
    .btn
      display inline-block
  .artwork
    display none
    position absolute
    top -50%
    left -50%
    width 200%
    height 200%
    .img
      min-height 50%
      min-width 50%
      margin auto
      absolute-cover()
    &.current
      display block

  .layer-artworks
    layer(1)

  .layer-btns
    layer(2)
    flex-direction(column)
    align-items(center)
    justify-content(flex-end)
    margin-bottom 10px
    


      
