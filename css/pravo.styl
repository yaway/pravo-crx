global-reset()


@import "mixins"

$tiffany-blue = #81D8D0

$font-m =
  font-size: 16px
  line-height: 1.25
  
tiffany-wrapper()
  color $tiffany-blue
  border 2px solid $tiffany-blue
  background-color alpha($tiffany-blue,0.3)
  border-radius(4px)


html
  height 100%
  font-family Helvetica, sans-serif

body
  {$font-m}
  position relative
  display flex
  height 100%
  overflow hidden

.ui-root
