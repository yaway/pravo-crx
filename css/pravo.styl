@import "../node_modules/nib/lib/nib"
@import "../node_modules/open-iconic/font/css/open-iconic"

global-reset()


@import "mixins"

$tiffany-blue = #81D8D0

$font-m =
  font-size: 14px
  line-height: 20px
  
tiffany-wrapper()
  color $tiffany-blue
  border 2px solid $tiffany-blue
  background-color alpha($tiffany-blue,0.3)
  border-radius(4px)


html
  height 100%
  font-family Helvetica, sans-serif

body
  {$font-m}
  position relative
  display flex
  height 100%
  overflow hidden

.btn
  tiffany-wrapper()
  padding 5px 10px
  display inline-block
  cursor pointer

.btns
  &.combined
    .btn
      border-left none
      border-right none
      border-radius 0
      &:first-child
        border-top-left-radius 4px
        border-bottom-left-radius 4px
        border-left 2px solid $tiffany-blue
      &:last-child
        border-top-right-radius 4px
        border-bottom-right-radius 4px
        border-right 2px solid $tiffany-blue
    .btn + .btn
      border-left 2px solid $tiffany-blue

.layer-dashboard
  layer(1)
  bg(alpha($tiffany-blue,0.3))
  
@import "./dashboard"
